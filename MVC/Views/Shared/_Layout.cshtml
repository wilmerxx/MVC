<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link rel="" href="https://cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.dataTables.min.css">


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

</head>
<body class=" p-0 ">
    <div class="container">
        <nav class="navbar navbar-expand-lg p-0 navbar-dark" style="height: 60px; background-color: #1780A9">
            <div class="container-fluid ">

                @Html.ActionLink("Alquiler de bicicletas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand " })

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", new { @class = "nav-link " })</li>
                        <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "User", new { @class = "nav-link " })</li>
                        <li class="nav-item">@Html.ActionLink("Cerrar sesion", "logoff", "Cerrar", null, new { @class = "nav-link " })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bootstrap")
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.6/js/dataTables.fixedHeader.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
